<center>
  <div class="contents">
    <div class="row">
      <div class="col-xs-12 col-md-12">
        <h1 class="col-xs-12 col-md-offset-3 col-md-6">ブログ一覧</h1>
      </div>
      <div class="col-xs-12 col-md-12">
        <div class="col-xs-6 col-md-offset-1 col-md-2">タイトル</div>
        <div class="col-xs-6 col-md-2" >内容</div>
        <div class="visible-lg-block visible-md-block visible-sm-block col-xs-6 col-md-offset-2 col-md-2">タイトル</div>
        <div class="visible-lg-block visible-md-block visible-sm-block col-xs-6 col-md-2" >内容</div>
        <% @blog.each do |blog| %>
        <div class="col-xs-12 col-md-6 col-lg-6">
          <div class="col-xs-6 col-md-offset-2 col-lg-offset-2 col-md-4 col-lg-4"><%= blog.title %></div>
          <div class="col-xs-6 col-md-4 col-lg-4"><%= blog.content %></div>
          <div class="btn btn-group" role="group" aria-label="...">
            <% if logged_in? %>
              <% if blog.user_id == current_user.id %>
                <div type="button" class="btn btn-default col-xs-4 col-md-4 col-lg-4"><%= link_to '確認', blog_path(blog.id) %></div>
                <div type="button" class="btn btn-default col-xs-4 col-md-4 col-lg-4"><%= link_to "編集", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></div>
                <div type="button" class="btn btn-default col-xs-4 col-md-4 col-lg-4"><%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></div>
              <% else %>
                <div type="button" class="btn btn-default col-xs-5 col-md-5 col-lg-5"><%= link_to '確認', blog_path(blog.id) %></div>
                <div class="col-xs-5 col-md-5 col-lg-5" ></div>
                <div class="col-xs-5 col-md-5 col-lg-5"></div>
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <div class="ce btn btn-default col-xs-12 col-md-offset-5 col-md-2"><%= link_to '投稿', new_blog_path %></div>
</center>
